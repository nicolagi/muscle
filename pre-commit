#!/usr/local/plan9/bin/rc -ex
if(! cmp pre-commit $0){
	echo 'Hook is stale, run: cp pre-commit' $0 >[1=2]
	exit 1
}
sources=`{ du -a cmd internal | awk '$2 ~ /\.go$/ { print $2 }' }
notformatted=`{ gofmt -l $sources }
if(! ~ $#notformatted 0){
	echo Did you run goimports before adding changes to the index? >[1=2]
	exit 1
}
go vet ./...
errcheck ./...
staticcheck ./...
go test -race ./...
